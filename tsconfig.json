/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "paths": {
      "ngssm-ace-editor": [
        "dist/ngssm-ace-editor"
      ],
      "ngssm-ag-grid": [
        "dist/ngssm-ag-grid"
      ],
      "ngssm-navigation": [
        "dist/ngssm-navigation"
      ],
      "ngssm-remote-data": [
        "dist/ngssm-remote-data"
      ],
      "ngssm-schematics": [
        "dist/ngssm-schematics"
      ],
      "ngssm-shell": [
        "dist/ngssm-shell"
      ],
      "ngssm-store": [
        "dist/ngssm-store"
      ],
      "ngssm-toolkit": [
        "dist/ngssm-toolkit"
      ]
    },
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "module": "es2020",
    "lib": [
      "es2020",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "include": [
    "src",
    "projects",
    "./cypress.config.ts"
  ],
  "exclude": [
    "./cypress.config.ts"
  ]
}