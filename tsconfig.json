/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "paths": {
      "ngssm-ace-editor": [
        "dist/ngssm-ace-editor"
      ],
      "ngssm-ag-grid": [
        "dist/ngssm-ag-grid"
      ],
      "ngssm-data": [
        "dist/ngssm-data"
      ],
      "ngssm-navigation": [
        "dist/ngssm-navigation"
      ],
      "ngssm-remote-data": [
        "dist/ngssm-remote-data"
      ],
      "ngssm-remote-data/*": [
        "dist/ngssm-remote-data/*"
      ],
      "ngssm-schematics": [
        "dist/ngssm-schematics"
      ],
      "ngssm-shell": [
        "dist/ngssm-shell"
      ],
      "ngssm-smusdi": [
        "./dist/ngssm-smusdi"
      ],
      "ngssm-store": [
        "dist/ngssm-store"
      ],
      "ngssm-store/*": [
        "dist/ngssm-store/*"
      ],
      "ngssm-toolkit": [
        "dist/ngssm-toolkit"
      ],
      "ngssm-toolkit/*": [
        "dist/ngssm-toolkit/*"
      ],
      "ngssm-tree": [
        "dist/ngssm-tree"
      ]
    },
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "include": [
    "src",
    "projects",
    "samples"
  ],
  "exclude": []
}