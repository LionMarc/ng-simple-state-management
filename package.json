{
  "name": "ng-simple-state-management",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",

    "build:ace-editor": "ng build --project=ngssm-ace-editor --configuration=production",
    "build:ag-grid": "ng build --project=ngssm-ag-grid --configuration=production",
    "build:data": "ng build --project=ngssm-data --configuration=production",
    "build:navigation": "ng build --project=ngssm-navigation --configuration=production",
    "build:remote-data": "ng build --project=ngssm-remote-data --configuration=production",
    "build:schematics": "ng build --project=ngssm-schematics && cd projects/ngssm-schematics && npm run build",
    "build:shell": "ng build --project=ngssm-shell --configuration=production",
    "build:smusdi": "ng build --project=ngssm-smusdi --configuration=production",
    "build:store": "ng build --project=ngssm-store --configuration=production",
    "build:toolkit": "ng build --project=ngssm-toolkit --configuration=production",
    "build:tree": "ng build --project=ngssm-tree --configuration=production",
    
    "test:ag-grid": "ng test --no-watch --browsers=ChromeHeadless --project=ngssm-ag-grid --code-coverage",
    "test:data": "ng test --no-watch --browsers=ChromeHeadless --project=ngssm-data --code-coverage",
    "test:navigation": "ng test --no-watch --browsers=ChromeHeadless --project=ngssm-navigation --code-coverage",
    "test:remote-data": "ng test --no-watch --browsers=ChromeHeadless --project=ngssm-remote-data --code-coverage",
    "test:shell": "ng test --no-watch --browsers=ChromeHeadless --project=ngssm-shell --code-coverage",
    "test:smusdi": "ng test --no-watch --browsers=ChromeHeadless --project=ngssm-smusdi --code-coverage",
    "test:store": "ng test --no-watch --browsers=ChromeHeadless --project=ngssm-store --code-coverage",
    "test:toolkit": "ng test --no-watch --browsers=ChromeHeadless --project=ngssm-toolkit --code-coverage",
    "test:tree": "ng test --no-watch --browsers=ChromeHeadless --project=ngssm-tree --code-coverage",

    "link:schematics": "npm link ./dist/ngssm-schematics --configuration=production",

    "build:ci": "npm run build:store && npm run build:toolkit && npm run build:schematics && npm run build:remote-data && npm run build:navigation && npm run build:ag-grid && npm run build:ace-editor && npm run build:shell && npm run build:tree && npm run build:data && npm run build:smusdi",
    "test:ci": "npm run test:store && npm run test:toolkit && npm run test:remote-data && npm run test:navigation && npm run test:ag-grid && npm run test:shell && npm run test:tree && npm run test:data && npm run test:smusdi"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "20.2.2",
    "@angular/cdk": "20.2.1",
    "@angular/common": "20.2.2",
    "@angular/compiler": "20.2.2",
    "@angular/core": "20.2.2",
    "@angular/forms": "20.2.2",
    "@angular/material": "20.2.1",
    "@angular/platform-browser": "20.2.2",
    "@angular/platform-browser-dynamic": "20.2.2",
    "@angular/router": "20.2.2",
    "@fortawesome/fontawesome-free": "^7.0.0",
    "ace-builds": "1.43.2",
    "ag-grid-angular": "34.1.2",
    "ag-grid-community": "34.1.2",
    "ag-grid-enterprise": "34.1.2",
    "immutability-helper": "^3.1.1",
    "luxon": "^3.7.1",
    "rxjs": "~7.8.1",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/build": "20.2.1",
    "@angular/cli": "20.2.1",
    "@angular/compiler-cli": "20.2.2",
    "@types/jasmine": "5.1.9",
    "@types/luxon": "^3.7.1",
    "@typescript-eslint/eslint-plugin": "8.41.0",
    "@typescript-eslint/parser": "8.41.0",
    "angular-eslint": "20.2.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "jasmine-core": "5.9.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "karma-junit-reporter": "^2.0.1",
    "multiple-cucumber-html-reporter": "^3.9.3",
    "ng-packagr": "^20.2.0",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "typescript": "~5.9.2"
  }
}